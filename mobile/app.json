{
  "expo": {
    "name": "Livro de Receitas",
    "slug": "recipe-book-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "usesAppleSignIn": true,
      "bundleIdentifier": "com.recipeBook.mobile",
      "googleServicesFile": "./ios/GoogleService-Info.plist",
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "REVERSED_CLIENT_ID",
            "CFBundleURLSchemes": ["com.googleusercontent.apps.1067379841978-cfh18te5vrbpea8csbpf5c9skj59j4mh"]
          },
          {
            "CFBundleURLName": "com.recipeBook.mobile",
            "CFBundleURLSchemes": ["recipebook"]
          }
        ],
        "NSCameraUsageDescription": "Este app precisa acessar a câmera para tirar fotos das receitas e analisá-las com IA.",
        "NSPhotoLibraryUsageDescription": "Este app precisa acessar a galeria de fotos para selecionar imagens das receitas.",
        "com.apple.developer.applesignin": ["Default"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "",
        "backgroundColor": "#ffffff"
      },
      "package": "com.recipeBook.mobile",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "recipebook"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "",
      "bundler": "metro"
    },
    "plugins": [
      "@react-native-google-signin/google-signin",
      "expo-apple-authentication"
    ],
    "scheme": "recipebook",
    "updates": {
      "enabled": false,
      "checkAutomatically": "NEVER",
      "fallbackToCacheTimeout": 0
    },
    "packagerOpts": {
      "config": "metro.config.js"
    }
  }
}
